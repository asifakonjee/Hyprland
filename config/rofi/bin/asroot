#!/usr/bin/env bash

## Copyright (C) 2020-2022 Aditya Shakya <adi1090x@gmail.com>

# Import Current Theme
DIR="$HOME/.config/themes"
STYLE="easy"
RASI="$DIR/$STYLE/rofi/asroot.rasi"

# rofi sudo askpass helper
export SUDO_ASKPASS="$HOME"/.config/rofi/bin/askpass

# Theme Elements
prompt='Root'
mesg="Run Applications As Root"

# Options
layout=`cat ${RASI} | grep 'USE_ICON' | cut -d'=' -f2`
if [[ "$layout" == 'NO' ]]; then
	option_1=" Alacritty"
	option_2=" Thunar"
	option_3=" Geany"
	option_4=" Vim"
	option_5=" Custom"
else
	option_1=""
	option_2=""
	option_3=""
	option_4=""
	option_5=""
fi

# Custom app
custom() {
	rofi -dmenu \
		-i -no-fixed-num-lines \
		-p "Run as Root : " \
		-theme $DIR/$STYLE/rofi/askpass.rasi
	}
# Rofi CMD
rofi_cmd() {
	rofi -dmenu \
		-p "$prompt" \
		-mesg "$mesg" \
		-markup-rows \
		-theme ${RASI}
}

# Pass variables to rofi dmenu
run_rofi() {
	echo -e "$option_1\n$option_2\n$option_3\n$option_4\n$option_5" | rofi_cmd
}

# Execute Command
run_cmd() {
	if [[ "$1" == '--opt1' ]]; then
		sudo -A -E alacritty
	elif [[ "$1" == '--opt2' ]]; then
		sudo -A -E thunar
	elif [[ "$1" == '--opt3' ]]; then
		sudo -A -E geany
	elif [[ "$1" == '--opt4' ]]; then
		sudo -A -E alacritty -e vim
	elif [[ "$1" == '--opt5' ]]; then
		custom="$(rofi -dmenu -i -no-fixed-num-lines -p "Run as Root : " -theme $DIR/$STYLE/rofi/askpass.rasi)"
		sudo -A -E "$custom"
	fi
}

# Actions
chosen="$(run_rofi)"
case ${chosen} in
    $option_1)
		run_cmd --opt1
        ;;
    $option_2)
		run_cmd --opt2
        ;;
    $option_3)
		run_cmd --opt3
        ;;
    $option_4)
		run_cmd --opt4
        ;;
    $option_5)
		run_cmd --opt5
        ;;
esac
